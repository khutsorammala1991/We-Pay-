<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <ViewFlipper
            android:id="@+id/flipper1"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            android:autoStart="true"
            android:flipInterval="4000">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner1" />
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baner8"
                android:contentDescription="" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner3" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner5" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner6" />
        </ViewFlipper>
        <View
            android:id="@+id/horizontalLine2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/flipper1"
            android:layout_alignBottom="@+id/imageView20"
            android:background="#999999"/>


    </LinearLayout>

    <EditText
        android:id="@+id/startDateEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontalLine"
        android:layout_weight="1"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:tag="startdate"
        android:text="Please Select Date"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/startDateEditText"
        android:layout_marginTop="19dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="@string/your_cash_back_balance"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cashElectricityTotal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/horizontalLine3"
        android:background="#ffffff"
        android:text="Electricity Total : R 0"
        android:textColor="@color/blue"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cashTelcoTotal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/horizontalLine5"
        android:background="#ffffff"
        android:text="Telco Total : R 0"
        android:textColor="@color/blue"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cashMuniTotal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/horizontalLine7"
        android:background="#ffffff"
        android:text="Municipality Total : R 0"
        android:textColor="@color/blue"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cashTotal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/gohome"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="#ffffff"
        android:gravity="right"
        android:text="Total : R 0"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/printButton"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="15dp"
        android:text="Eskom Prepaid Electricity"
        android:textSize="20sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/horizontalLine3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView3"
        android:background="#999999"/>
    <View
        android:id="@+id/horizontalLine5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/textView4"
        android:background="#999999"/>
    <View
        android:id="@+id/horizontalLine7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView5"
        android:background="#999999"/>

    <View
        android:id="@+id/horizontalLine8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentStart="true"
        android:background="#999999" />




    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="8dp"

        android:background="#999999" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cashElectricityTotal"
        android:layout_marginTop="11dp"
        android:text="Telcos"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cashTelcoTotal"
        android:layout_marginTop="9dp"
        android:text="Municipalities Prepaid Electricity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cashMuniTotal"
        android:layout_marginTop="6dp"
        android:text="DSTV  "
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/DSTV"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:background="#ffffff"
        android:text="DSTV Total : R 0"
        android:textColor="@color/blue"
        android:textSize="14dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/gohome"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/blue"
        android:text="go home"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


</RelativeLayout>

