<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center_horizontal">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <ViewFlipper
            android:id="@+id/flipper1"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            android:autoStart="true"
            android:flipInterval="4000">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner6" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner2" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baner8"
                android:contentDescription="" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner3" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner5" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner1" />
        </ViewFlipper>

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/imageView20"
            android:background="#999999"/>




        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:text="Blind Vend"
            android:textColor="@color/holo_gray_dark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/item_meternumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_name"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:textSize="20sp"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:hint="Enter Meter Number"
            android:inputType="number"
            android:textColor="@android:color/background_dark"
             />


        <EditText
            android:id="@+id/item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:hint="Amount"
            android:inputType="number"
            android:marqueeRepeatLimit="marquee_forever"
            android:minWidth="70dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/item_SGC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:hint="SGC"
            android:inputType="number"
            android:marqueeRepeatLimit="marquee_forever"
            android:minWidth="70dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/item_KRN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:hint="KRN"
            android:inputType="number"
            android:marqueeRepeatLimit="marquee_forever"
            android:minWidth="70dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/item_Alg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:hint="ALG"
            android:inputType="number"
            android:marqueeRepeatLimit="marquee_forever"
            android:minWidth="70dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/item_TI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:hint="TI"
            android:inputType="number"
            android:marqueeRepeatLimit="marquee_forever"
            android:minWidth="70dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/item_TokenTech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:hint="TokenTeck"
            android:inputType="number"
            android:marqueeRepeatLimit="marquee_forever"
            android:minWidth="70dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/errormessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:minWidth="70dp"
            android:scrollHorizontally="true"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp" />


        <Button
            android:id="@+id/buyElectricityButton"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_margin="5dp"
            android:background="@color/blue"
            android:text="process Transaction"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


        <Button
            android:id="@+id/gohome"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@color/blue"
            android:text="go home"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_above="@+id/btnGetMoreResults"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" />

    </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btnGetMoreResults"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:text="Traiding  Balance : R24.00  |  Cash Back : R100.00"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold" />


</RelativeLayout>
    </ScrollView>