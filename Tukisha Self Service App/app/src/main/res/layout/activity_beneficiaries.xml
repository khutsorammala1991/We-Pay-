<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/container" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/view_toolbar"/>


    <ViewFlipper android:id="@+id/flipper1"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        android:flipInterval="4000" android:autoStart="true">

        <ImageView android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sweet:srcCompat="@drawable/banner3"/>

        <ImageView android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sweet:srcCompat="@drawable/banner2"/>

        <ImageView android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="" sweet:srcCompat="@drawable/baner8"/>


        <ImageView android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sweet:srcCompat="@drawable/banner1"/>


        <ImageView android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sweet:srcCompat="@drawable/banner4"/>


        <ImageView android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sweet:srcCompat="@drawable/banner5"/>

        <ImageView android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sweet:srcCompat="@drawable/banner6"/>

    </ViewFlipper>
    <TextView android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="Create Beneficiaries"
        android:layout_below="@+id/horizontalLine"
        android:layout_centerHorizontal="true"/>


    <View android:id="@+id/horizontalLine"
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/flipper1"
        android:layout_alignParentStart="true"/>

    <Button android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/gohome"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:text="Go home"
        android:layout_alignParentBottom="true"
        android:textAlignment="center" style="?android:attr/textAppearanceSmall"/>

    <Button android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/save"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginBottom="51dp"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_alignParentStart="true" style="?android:attr/textAppearanceSmall"/>


    <LinearLayout android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true">


        <RelativeLayout android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText android:textSize="16dp"
                android:id="@+id/enterSurname"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:hint="Enter Surname"
                android:ems="10"
                android:layout_below="@+id/enterName"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:layout_alignStart="@+id/enterName"/>

            <EditText android:textSize="16dp"
                android:id="@+id/enterName"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:inputType="textPersonName"
                android:textAlignment="center"/>


            <TextView android:textSize="16dp"
                android:id="@+id/name"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_alignBaseline="@+id/enterName"
                android:layout_alignParentStart="true"/>
            <TextView android:textSize="16dp"
                android:id="@+id/surname"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:text="Surname"
                android:layout_alignBaseline="@+id/enterSurname"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp">

            <Spinner
                android:textSize="40dp"
                android:id="@+id/spinner1"
                android:visibility="visible"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>

        <TextView
            android:textSize="16dp"
            android:id="@+id/meterNumber0"
            android:layout_width="467dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:layout_alignBaseline="@+id/textView25"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="1dp">


            <EditText android:textSize="16dp"
                android:id="@+id/meterNumber"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:hint="Enter  Number "
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:inputType="number"
                android:textAlignment="center"/>

            <EditText android:textSize="16dp"
                android:id="@+id/meterNumber1"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:hint="Confirm Number "
                android:ems="10"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:inputType="number"
                android:textAlignment="center"/>
            <TextView android:textSize="16dp"
                android:id="@+id/messageTextView"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
