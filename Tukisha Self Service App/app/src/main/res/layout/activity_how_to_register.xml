<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artitech.tsalano.tukisha.HowToRegisterActivity">


    <ViewFlipper
        android:id="@+id/flipper1"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        android:autoStart="true"
        android:flipInterval="4000">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/register" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/registers" />

    </ViewFlipper>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#0099cc"
        android:layout_below="@+id/flipper1"
        android:text="Fill In the information as shown in the  screen above and press SIGN UP button "
        android:textSize="15dp" />


    <Button
        android:id="@+id/back"
        style="?android:textAppearanceSmall"
        android:layout_width="100dp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#0099cc"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        style="?android:textAppearanceSmall"
        android:layout_width="100dp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0099cc"
        android:text="@string/action_sign_in"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/next"
        style="?android:textAppearanceSmall"
        android:layout_width="100dp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#0099cc"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
