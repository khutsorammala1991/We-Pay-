<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dstv"
            android:gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_PaymentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Date : 2017-06-27-20:24:28"
        android:textColor="#040404"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/item_ReceiptNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_PaymentDate"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Receipt No: 123123123"
        android:textColor="#343434"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_FirstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ReceiptNumber"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"

        android:text="Tsheko"
        android:textColor="#343434"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_LastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_FirstName"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"

        android:text="Tsheko"
        android:textColor="#343434"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_AmountDue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_PaymentDate"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="Amount Due : R100"
        android:textColor="@color/blue"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_AmountPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_ReceiptNumber"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="Amount Paid : R100"
        android:textColor="@color/blue"
        android:textSize="12dip"
        android:textStyle="bold" />

</RelativeLayout>
