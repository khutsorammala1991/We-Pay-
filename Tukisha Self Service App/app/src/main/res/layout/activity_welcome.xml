<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView

        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/tukisha_banner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/takeatour" />



    <Button

        android:id="@+id/loginButton"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:background="@color/blue"
        android:textSize="8pt"
        android:padding="10dp"
        android:text="LOGIN"
        android:textColor="#FFF"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

    <Button

        android:textColor="#FFF"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:textSize="8pt"
        android:padding="10dp"
        android:text="REGISTER"
        android:id="@+id/registerButton"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_toEndOf="@+id/loginButton"
        android:layout_marginStart="14dp" />


    <TextView
        android:textColor="#FFF"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:textSize="8pt"
        android:padding="10dp"
        android:text="TAKE A TOUR"
        android:id="@+id/takeatour"
        android:layout_alignBottom="@+id/registerButton"
        android:layout_toEndOf="@+id/registerButton"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/registerButton" />




</RelativeLayout>








