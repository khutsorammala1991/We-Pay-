<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:weightSum="4">


    <ViewFlipper
        android:id="@+id/flipper1"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        android:autoStart="true"
        android:paddingTop="30dp"
        android:background="#fff"
        android:flipInterval="4000">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banner5" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banner6" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banner2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banner3" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banner4" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/banner5" />
    </ViewFlipper>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#999999" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:columnWidth="120dp"
        android:numColumns="3"
        android:background="#fff"
        android:verticalSpacing="0.5dp"
        android:horizontalSpacing="0.5dp"
        android:stretchMode="spacingWidthUniform"
        android:scrollbars="horizontal"
        android:layout_weight="3.99" />

    <Button
        android:id="@+id/gohome"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_margin="5dp"
        android:background="@color/blue"
        android:text="go home"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


    <Button android:id="@+id/BalanceResults"
        style="?android:textAppearanceSmall"
        android:background="@color/blue"
        android:layout_height="35sp"
        android:layout_width="match_parent"
        android:text="Trading Balance : R24.00   |   Cash Back : R100.00"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_alignParentBottom="true" />

</LinearLayout>
